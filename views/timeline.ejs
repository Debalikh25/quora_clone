<link rel="stylesheet" type="text/css" href="/css/index.css" />
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <section></section>
    </div>

    <div class="col-md-6">
      <section id="quora-container">
        <form action="/question/create" method="post">
          <div class="mt-3">
            <input
              type="text"
              name="question"
              class="form-control"
              id="question"
              placeholder="Start your question with 'What' , 'Why' or 'Share'"
              required
            />
          </div>

          <input
            type="submit"
            class="btn btn-danger mt-2"
            value="Add Question"
          />
        </form>
      </section>
    </div>

    <div class="col-md-3">
      <section></section>
    </div>
  </div>
</div>
